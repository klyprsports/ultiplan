rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function signedIn() {
      return request.auth != null;
    }

    function isTeamMember(teamId) {
      return signedIn() &&
        exists(/databases/$(database)/documents/teams/$(teamId)/members/$(request.auth.uid));
    }

    function userTeamIds() {
      let userDoc = get(/databases/$(database)/documents/users/$(request.auth.uid));
      return userDoc.exists() && userDoc.data.teamIds is list ? userDoc.data.teamIds : [];
    }

    function canView(resource) {
      return resource.data.visibility == 'public'
        || (signedIn() && resource.data.ownerId == request.auth.uid)
        || (resource.data.visibility == 'team' &&
            resource.data.sharedTeamIds is list &&
            resource.data.sharedTeamIds.size() > 0 &&
            resource.data.sharedTeamIds.hasAny(userTeamIds()));
    }

    function canEdit(resource) {
      return signedIn() && (
        resource.data.ownerId == request.auth.uid ||
        (resource.data.visibility == 'team' &&
         resource.data.sharedTeamIds is list &&
         resource.data.sharedTeamIds.size() > 0 &&
         resource.data.sharedTeamIds.hasAny(userTeamIds()))
      );
    }

    match /plays/{playId} {
      allow read: if canView(resource);
      allow create: if signedIn() && request.resource.data.ownerId == request.auth.uid;
      allow update: if canEdit(resource);
      allow delete: if signedIn() && resource.data.ownerId == request.auth.uid;
    }

    match /formations/{formationId} {
      allow read: if canView(resource);
      allow create: if signedIn() && request.resource.data.ownerId == request.auth.uid;
      allow update: if canEdit(resource);
      allow delete: if signedIn() && resource.data.ownerId == request.auth.uid;
    }

    match /teams/{teamId} {
      allow read: if signedIn() && (isTeamMember(teamId) || userTeamIds().hasAny([teamId]));
      allow create: if signedIn() && request.resource.data.ownerId == request.auth.uid;
      allow update, delete: if signedIn() && resource.data.ownerId == request.auth.uid;
    }

    match /teams/{teamId}/members/{userId} {
      allow read: if signedIn() && resource.data.userId == request.auth.uid;
      allow create, delete: if signedIn() && request.auth.uid == userId;
    }

    match /users/{userId} {
      allow read, write: if signedIn() && request.auth.uid == userId;
    }
  }
}
